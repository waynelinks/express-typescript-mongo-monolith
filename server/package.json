{
  "name": "express-typescript-mongo-microservice",
  "version": "1.0.0",
  "main": "dist/server.js",
  "license": "MIT",
  "engines": {
    "node": ">= 14.15.0"
  },
  "scripts": {
    "build": "yarn clean && tsc",
    "clean": "rimraf dist",
    "tsc": "tsc",
    "start": "yarn build && env-cmd -f .env node dist/server.js",
    "dev": "env-cmd -f .env.dev tsnd --respawn ./src/server.ts",
    "dev:debug": "env-cmd -f .env.dev tsnd --inspect=4321 --respawn src/server.ts",
    "test": "env-cmd -f .env.test jest --watchAll --no-cache --runInBand --detectOpenHandles",
    "lint": "eslint --fix ./src --ext .js,.ts"
  },
  "devDependencies": {
    "@types/express": "^4.17.9",
    "@types/jest": "^26.0.15",
    "@types/mongoose": "^5.10.1",
    "@types/node": "^14.14.9",
    "@types/supertest": "^2.0.10",
    "eslint-plugin-jest": "^24.1.3",
    "jest": "^26.6.3",
    "mongodb-memory-server": "^6.9.2",
    "rimraf": "^3.0.2",
    "supertest": "^6.0.1",
    "ts-jest": "^26.4.4",
    "ts-node-dev": "^1.0.0",
    "typescript": "^4.1.2"
  },
  "dependencies": {
    "@bigoncloud/errors": "^1.0.6",
    "@bigoncloud/logger": "^1.1.4",
    "@bigoncloud/middleware": "^1.0.18",
    "env-cmd": "^10.1.0",
    "express": "^4.17.1",
    "express-async-errors": "^3.1.1",
    "mongoose": "^5.10.15"
  }
}
